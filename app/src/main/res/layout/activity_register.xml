<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context="com.example.babybuy.Activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_backk"
            android:layout_marginStart="22dp"
            android:layout_marginTop="14dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an account"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let us know about yourself"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/card_background"
        android:elevation="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="10dp"
            android:text="Register to Baby Buy"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/rfirstname"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edit_text_background"
                android:drawableLeft="@drawable/ic_users"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:hint="Enter First Name"
                android:textColorHint="#292929"
                android:inputType="textPersonName"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/rlastname"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edit_text_background"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:hint="Enter Last Name"
                android:textColorHint="#292929"
                android:inputType="textPersonName"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/remail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edit_text_background"
                android:drawableLeft="@drawable/ic_emails"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:hint="Enter email"
                android:textColorHint="#292929"
                android:inputType="textEmailAddress"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/rpassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edit_text_background"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:hint="Enter password"
                android:textColorHint="#292929"
                android:inputType="textPassword"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/rconfirmpassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edit_text_background"
                android:drawableLeft="@drawable/ic_password"
                android:drawableTint="@color/black"
                android:hint="Retype password"
                android:textColorHint="#292929"
                android:inputType="textPassword"
                android:drawablePadding="15dp"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="25dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ahaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Already member? "
                android:textColor="@color/black"
                android:layout_marginStart="12dp"/>
            <TextView
                android:id="@+id/rsingup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Click to Login"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="12dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>